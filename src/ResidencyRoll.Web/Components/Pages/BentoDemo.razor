@page "/bento-demo"
@using Radzen
@using Radzen.Blazor
@rendermode InteractiveServer

<PageTitle>Bento Grid Demo</PageTitle>

<div class="bento-grid">
    <!-- Header Card -->
    <div class="bento-cell-12 fade-in">
        <RadzenCard>
            <h1>Bento Grid Layout System</h1>
            <p class="text-secondary">A modern, responsive grid system with glassmorphism design</p>
        </RadzenCard>
    </div>

    <!-- Feature Cards - 3 Columns -->
    <div class="bento-cell-4 fade-in">
        <RadzenCard style="height: 100%;">
            <div style="text-align: center;">
                <div style="font-size: 3rem; margin-bottom: 1rem;">??</div>
                <h3>Modern Design</h3>
                <p class="text-secondary">Liquid glass aesthetic inspired by macOS 26</p>
            </div>
        </RadzenCard>
    </div>

    <div class="bento-cell-4 fade-in">
        <RadzenCard style="height: 100%;">
            <div style="text-align: center;">
                <div style="font-size: 3rem; margin-bottom: 1rem;">??</div>
                <h3>Responsive</h3>
                <p class="text-secondary">Adapts beautifully to any screen size</p>
            </div>
        </RadzenCard>
    </div>

    <div class="bento-cell-4 fade-in">
        <RadzenCard style="height: 100%;">
            <div style="text-align: center;">
                <div style="font-size: 3rem; margin-bottom: 1rem;">?</div>
                <h3>Performance</h3>
                <p class="text-secondary">Optimized for speed and efficiency</p>
            </div>
        </RadzenCard>
    </div>

    <!-- Large Feature Card - 8 Columns -->
    <div class="bento-cell-8 bento-row-2 fade-in">
        <RadzenCard style="height: 100%;">
            <h2>Primary Content Area</h2>
            <p class="text-secondary">This larger card spans 8 columns and 2 rows, perfect for main content, charts, or data visualizations.</p>
            <div style="margin-top: 2rem;">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Primary Action" />
                <RadzenButton ButtonStyle="ButtonStyle.Secondary" Text="Secondary Action" class="ms-2" />
            </div>
            <div style="margin-top: 2rem; padding: 1.5rem; background: rgba(0, 113, 227, 0.1); border-radius: 12px;">
                <h4 class="accent">Featured Section</h4>
                <p class="text-secondary mb-0">Example of nested content within a Bento cell</p>
            </div>
        </RadzenCard>
    </div>

    <!-- Sidebar Cards - 4 Columns -->
    <div class="bento-cell-4 fade-in">
        <RadzenCard style="height: 100%;">
            <h4>Statistics</h4>
            <div class="mt-3">
                <div class="mb-3">
                    <div class="text-secondary small">Total Users</div>
                    <h2 class="accent mb-0">1,234</h2>
                </div>
                <div class="mb-3">
                    <div class="text-secondary small">Active Sessions</div>
                    <h2 class="accent mb-0">89</h2>
                </div>
            </div>
        </RadzenCard>
    </div>

    <div class="bento-cell-4 fade-in">
        <RadzenCard style="height: 100%;">
            <h4>Quick Links</h4>
            <div class="d-flex flex-column gap-2 mt-3">
                <a href="#" class="text-decoration-none text-secondary">?? Analytics</a>
                <a href="#" class="text-decoration-none text-secondary">?? Settings</a>
                <a href="#" class="text-decoration-none text-secondary">?? Profile</a>
                <a href="#" class="text-decoration-none text-secondary">?? Messages</a>
            </div>
        </RadzenCard>
    </div>

    <!-- Equal Width Cards - 3 Columns Each -->
    <div class="bento-cell-6 fade-in">
        <RadzenCard>
            <h3>Column Layout Example</h3>
            <p class="text-secondary">This card takes up 6 columns (half width on desktop)</p>
            <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Learn More" />
        </RadzenCard>
    </div>

    <div class="bento-cell-6 fade-in">
        <RadzenCard>
            <h3>Flexible Sizing</h3>
            <p class="text-secondary">Cards can span from 1 to 12 columns for flexible layouts</p>
            <RadzenButton ButtonStyle="ButtonStyle.Secondary" Text="Explore" />
        </RadzenCard>
    </div>

    <!-- Color Palette Showcase -->
    <div class="bento-cell-12 fade-in">
        <RadzenCard>
            <h2>2026 Color Palette</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem; margin-top: 1rem;">
                <div style="padding: 2rem; background: #F5F5F7; border-radius: 12px; text-align: center;">
                    <div class="text-secondary small">Background</div>
                    <div class="text-primary">#F5F5F7</div>
                </div>
                <div style="padding: 2rem; background: #0071E3; border-radius: 12px; text-align: center; color: white;">
                    <div style="opacity: 0.8;" class="small">Accent</div>
                    <div>#0071E3</div>
                </div>
                <div style="padding: 2rem; background: rgba(255, 255, 255, 0.4); backdrop-filter: blur(15px); border: 1px solid rgba(255,255,255,0.5); border-radius: 12px; text-align: center;">
                    <div class="text-secondary small">Glass Effect</div>
                    <div class="text-primary">Glassmorphism</div>
                </div>
            </div>
        </RadzenCard>
    </div>

    <!-- Typography Examples -->
    <div class="bento-cell-6 fade-in">
        <RadzenCard>
            <h1 style="margin-bottom: 0.5rem;">Heading 1</h1>
            <h2 style="margin-bottom: 0.5rem;">Heading 2</h2>
            <h3 style="margin-bottom: 0.5rem;">Heading 3</h3>
            <h4 style="margin-bottom: 0.5rem;">Heading 4</h4>
            <p class="text-secondary">Body text with increased line height for better readability</p>
        </RadzenCard>
    </div>

    <!-- Component Examples -->
    <div class="bento-cell-6 fade-in">
        <RadzenCard>
            <h3>Interactive Components</h3>
            <div class="d-flex flex-column gap-3 mt-3">
                <RadzenTextBox Placeholder="Enter text..." />
                <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Primary Button" />
                <RadzenButton ButtonStyle="ButtonStyle.Secondary" Text="Secondary Button" />
            </div>
        </RadzenCard>
    </div>
</div>
