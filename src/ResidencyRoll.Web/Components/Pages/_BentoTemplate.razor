@page "/template-example"
@using Radzen
@using Radzen.Blazor
@rendermode InteractiveServer

@* 
    BENTO GRID PAGE TEMPLATE
    
    This template demonstrates best practices for creating pages
    with the Liquid Glass design system.
    
    Copy this file and modify as needed for your pages.
*@

<PageTitle>Page Title</PageTitle>

<div class="bento-grid">
    
    @* ============================================
       HERO SECTION - Full Width Header
       ============================================ *@
    <div class="bento-cell-12 fade-in">
        <RadzenCard>
            <h1>Page Heading</h1>
            <p class="text-secondary">Brief description of this page's purpose</p>
        </RadzenCard>
    </div>

    @* ============================================
       MAIN CONTENT - 8 Columns
       ============================================ *@
    <div class="bento-cell-8 fade-in">
        <RadzenCard style="height: 100%;">
            <h2>Main Content Area</h2>
            <p class="text-secondary">
                This is your primary content area. It spans 8 columns on desktop,
                providing ample space for charts, tables, forms, or other content.
            </p>
            
            @* Example: Data Table *@
            <div class="mt-4">
                <h4>Example Table</h4>
                @* Add your RadzenDataGrid or other content here *@
            </div>
        </RadzenCard>
    </div>

    @* ============================================
       SIDEBAR - 4 Columns
       ============================================ *@
    <div class="bento-cell-4 fade-in">
        <RadzenCard style="height: 100%;">
            <h4>Sidebar Content</h4>
            <p class="text-secondary">Quick actions, stats, or navigation</p>
            
            <div class="d-flex flex-column gap-2 mt-3">
                <RadzenButton 
                    ButtonStyle="ButtonStyle.Primary" 
                    Text="Primary Action"
                    Click="@OnPrimaryAction" />
                <RadzenButton 
                    ButtonStyle="ButtonStyle.Secondary" 
                    Text="Secondary Action"
                    Click="@OnSecondaryAction" />
            </div>
        </RadzenCard>
    </div>

    @* ============================================
       STATISTICS - Three Equal Cards
       ============================================ *@
    <div class="bento-cell-4 fade-in">
        <RadzenCard>
            <div class="text-secondary small mb-2">Metric 1</div>
            <h2 class="accent mb-0">1,234</h2>
            <p class="text-secondary small mb-0">+12% from last month</p>
        </RadzenCard>
    </div>

    <div class="bento-cell-4 fade-in">
        <RadzenCard>
            <div class="text-secondary small mb-2">Metric 2</div>
            <h2 class="accent mb-0">567</h2>
            <p class="text-secondary small mb-0">+8% from last month</p>
        </RadzenCard>
    </div>

    <div class="bento-cell-4 fade-in">
        <RadzenCard>
            <div class="text-secondary small mb-2">Metric 3</div>
            <h2 class="accent mb-0">89</h2>
            <p class="text-secondary small mb-0">+5% from last month</p>
        </RadzenCard>
    </div>

    @* ============================================
       FORM SECTION - Half Width
       ============================================ *@
    <div class="bento-cell-6 fade-in">
        <RadzenCard>
            <h3>Input Form</h3>
            <p class="text-secondary mb-4">Example form with modern inputs</p>
            
            <div class="d-flex flex-column gap-3">
                <div>
                    <label class="text-secondary small mb-1 d-block">Name</label>
                    <RadzenTextBox 
                        @bind-Value="@formData.Name" 
                        Placeholder="Enter name"
                        class="w-100" />
                </div>
                
                <div>
                    <label class="text-secondary small mb-1 d-block">Email</label>
                    <RadzenTextBox 
                        @bind-Value="@formData.Email" 
                        Placeholder="email@example.com"
                        class="w-100" />
                </div>
                
                <div>
                    <label class="text-secondary small mb-1 d-block">Category</label>
                    <RadzenDropDown 
                        @bind-Value="@formData.Category" 
                        Data="@categories"
                        Placeholder="Select category"
                        class="w-100" />
                </div>
                
                <div class="d-flex gap-2 mt-2">
                    <RadzenButton 
                        ButtonStyle="ButtonStyle.Primary" 
                        Text="Submit"
                        Click="@OnSubmit" />
                    <RadzenButton 
                        ButtonStyle="ButtonStyle.Secondary" 
                        Text="Reset"
                        Click="@OnReset" />
                </div>
            </div>
        </RadzenCard>
    </div>

    @* ============================================
       CONTENT BLOCK - Half Width
       ============================================ *@
    <div class="bento-cell-6 fade-in">
        <RadzenCard>
            <h3>Information Panel</h3>
            <p class="text-secondary">
                Additional information or instructions can go here.
                This card sits alongside the form for a balanced layout.
            </p>
            
            <div class="mt-4 p-3 glass rounded">
                <h5 class="accent mb-2">?? Pro Tip</h5>
                <p class="text-secondary small mb-0">
                    Use the glass utility class to create nested sections
                    with the glassmorphism effect.
                </p>
            </div>
        </RadzenCard>
    </div>

    @* ============================================
       FULL WIDTH FOOTER - Data Table or Chart
       ============================================ *@
    <div class="bento-cell-12 fade-in">
        <RadzenCard>
            <h2>Detailed View</h2>
            <p class="text-secondary mb-4">Full-width section for tables, charts, or detailed content</p>
            
            @* Add your RadzenDataGrid, RadzenChart, or other content here *@
            <div class="p-4 glass rounded text-center">
                <p class="text-secondary mb-0">Your content goes here</p>
            </div>
        </RadzenCard>
    </div>

</div>

@code {
    // Sample form data
    private FormData formData = new();
    private List<string> categories = new() { "Category A", "Category B", "Category C" };

    private void OnPrimaryAction()
    {
        // Handle primary action
    }

    private void OnSecondaryAction()
    {
        // Handle secondary action
    }

    private void OnSubmit()
    {
        // Handle form submission
    }

    private void OnReset()
    {
        formData = new FormData();
    }

    // Sample data class
    private class FormData
    {
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Category { get; set; } = string.Empty;
    }
}
